<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity"
    android:id="@+id/father">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1_h_50ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.20">

    </androidx.constraintlayout.widget.Guideline>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:stretchColumns="*"
        app:layout_constraintBottom_toTopOf="@id/gl1_h_50ps"
        app:layout_constraintTop_toTopOf="@+id/father"

        >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"

            android:layout_marginBottom="1pt">

            <EditText
                android:id="@+id/etnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:gravity="end"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="40sp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"

            android:layout_marginBottom="5pt">

            <TextView
                android:id="@+id/etvhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:gravity="end"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="40sp"

                />
        </TableRow>
    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:stretchColumns="*"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/gl1_h_50ps"
        app:layout_constraintBottom_toBottomOf="@+id/father"

